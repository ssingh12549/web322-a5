<div class="row">
    <div class="col-md-12">
        <br>
        <h2><a href="/courses/add" class="btn btn-success float-right">+ Add New Course</a></h2>
        <hr />
        <div class="table-responsive">
        <table class="table ">
            <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Description</th>
                <th><hr></hr></th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td><a href="/courses/{{courseId}}">{{courseCode}}</a></td>
                    <td><a href="/courses?id={{courseId}}">{{courseDescription}}</a></td>
                    <td><a class="btn btn-danger" href="courses/delete/{{courseId}}">remove</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
        
    </div>
     {{#unless courses}}
        <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>